<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundoapp"
        tools:context=".Activity.LoginActivity">

    <TextView
            android:text="Bem vindo, Faça o login"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="97dp"
            android:layout_marginBottom="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail"
            android:drawableLeft="@drawable/ic_action_user"
            android:hint="Digite seu usuário"
            android:gravity="center"
            android:textColorHint="@android:color/background_dark"
            android:textColorLink="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp" android:layout_marginBottom="3dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editPassword"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/editPassword"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="Digite sua senha"
            android:textColorLink="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="@+id/editEmail" app:layout_constraintTop_toBottomOf="@+id/editEmail"
            android:layout_marginBottom="34dp" app:layout_constraintBottom_toTopOf="@+id/btnEntrar"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntrar"
            android:gravity="center"
            android:textColorLink="@android:color/background_dark" android:textColorHint="@color/colorAccent"
            android:textColor="@android:color/background_dark"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toBottomOf="@+id/editPassword" android:layout_marginBottom="189dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/mcvidrospp"
            android:id="@+id/imageView3"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/editEmail"/>
</android.support.constraint.ConstraintLayout>